#! /bin/bash

export ROOT=`cargo metadata --format-version 1 | jq -r ".workspace_root"`
export PYTHONPATH=$ROOT/py


task() {
    JOB_ID=$1
    ITER=$2
    VER=$3
    STEP=$4
    WHITE="runs/$ITER/tb_logs/chess/$VER/epoch-$STEP.pt"
    shift 4

    OUTPUT="${ITER}/${VER}_${STEP}"
    mkdir -p "replay/$ITER/${VER}_${STEP}"
    echo "Run index ${JOB_ID}: W: ${WHITE} B: ${BLACK} ARGS: $@" | tee "replay/$OUTPUT/meta"
    cargo r --release --bin play  -- \
        --white-device cpu --white-checkpoint $WHITE \
        --black-device cpu --black-type nn --black-checkpoint ${BLACK} \
        -o "${OUTPUT}/${JOB_ID}.json"\
        $@
}

export -f task

set -ex
# export BLACK=''
# parallel -j3 task {#} 3 version_0 99 -d cuda --rollout=300 --temperature 0 --cpuct 1 ::: $(seq 1 100)
export BLACK="runs/18/tb_logs/chess/version_1/epoch-3.pt"
parallel -j2 task {#} 19 version_1 3  --rollout=300 --temperature 0 --cpuct 2 ::: $(seq 1 100)
parallel -j2 task {#} 19 version_1 7  --rollout=300 --temperature 0 --cpuct 2 ::: $(seq 1 100)
parallel -j2 task {#} 19 version_1 11 --rollout=300 --temperature 0 --cpuct 2 ::: $(seq 1 100)
parallel -j2 task {#} 19 version_1 15 --rollout=300 --temperature 0 --cpuct 2 ::: $(seq 1 100)
parallel -j2 task {#} 19 version_1 19 --rollout=300 --temperature 0 --cpuct 2 ::: $(seq 1 100)
